mixin reviewCard(review)
  .reviews__card
    .reviews__avatar
      img.reviews__avatar-img(src=`/img/users/${review && review.user && review.user.photo ? review.user.photo : ''}`, alt=`${review && review.user && review.user.name ? review.user.name : ''}`)
      h6.reviews__user= review && review.user && review.user.name ? review.user.name : ''
    p.reviews__text= review && review.review ? review.review : ''
    .reviews__rating
      each star in [1,2,3,4,5]
        svg.reviews__star(class=`reviews__star--${review && review.rating && (review.rating >= star) ? 'active' : 'inactive'}`)
          use(xlink:href=`/img/icons.svg#icon-star`)